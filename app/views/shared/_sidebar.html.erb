<nav class="sidebar">
  <div class="sidebar__panel">
    <% 
      current_path = request.path
      nav_items = [
        { path: "/", label: "HOME", icon: '<path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>' },
        { path: "/explore", label: "EXPLORE", icon: '<circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/>' },
        { path: "/projects", label: "PROJECTS", icon: '<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>' },
        { path: "/votings", label: "VOTINGS", icon: '<polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>' }
      ]
    %>
    
    <% nav_items.each do |item| %>
      <% is_active = current_path == item[:path] || (item[:path] != "/" && current_path.start_with?(item[:path])) %>
      <a href="<%= item[:path] %>" class="sidebar__item <%= 'sidebar__item--active' if is_active %>">
        <div class="sidebar__item-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <%= raw item[:icon] %>
          </svg>
        </div>
        <span class="sidebar__item-text"><%= item[:label] %></span>
      </a>
    <% end %>
  </div>
</nav>

