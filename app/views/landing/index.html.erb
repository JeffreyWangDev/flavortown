<div class="min-h-screen bg-landing-bg-1 relative">
  <div class="absolute -top-14 left-10">
    <%= inline_svg_tag "landing/section-1/flag-orpheus-top.svg", class: "w-64 h-64" %>
  </div>

  <!-- Button Test Section -->
  <div class="absolute top-20 left-10 flex flex-col gap-4 bg-white/90 p-6 rounded-2xl">
    <h3 class="text-lg font-bold text-gray-800">Button Variants:</h3>
    <button class="btn btn--red">
              <%= inline_svg_tag "icons/mail.svg" %>

    Red Button</button>
    <button class="btn btn--green">Green Button</button>
    <button class="btn btn--blue">Blue Button</button>
    <button class="btn btn--yellow">yellow Button</button>
    
    <h3 class="text-lg font-bold text-gray-800 mt-4">Input Variants:</h3>
    <div class="input-wrapper input-wrapper--red">
      <%= inline_svg_tag "icons/mail.svg" %>
      <input type="text" class="input input--red" placeholder="Enter your email...">
    </div>
    <div class="input-wrapper input-wrapper--green">
      <%= inline_svg_tag "icons/mail.svg" %>
      <input type="text" class="input input--green" placeholder="Green input...">
    </div>
    <div class="input-wrapper input-wrapper--blue">
      <%= inline_svg_tag "icons/mail.svg" %>
      <input type="text" class="input input--blue" placeholder="Blue input...">
    </div>
    <div class="input-wrapper input-wrapper--yellow">
      <%= inline_svg_tag "icons/mail.svg" %>
      <input type="text" class="input input--yellow" placeholder="yellow input...">
    </div>
  </div>

  <div class="absolute top-0 right-0 p-8">
    <%= form_tag "/auth/slack", method: :post, data: {turbo: false} do %>
      <button type="submit" class="btn btn--red text-xl">
        Sign In!
      </button>
    <% end %>
  </div>

  <div class="flex min-h-screen">
    <!-- Left section – probably logo -->
    <div class="w-1/2 flex items-center justify-center p-8">
      <h1 class="text-6xl ">flavortown logo</h1>
    </div>

    <div class="w-1/2 flex items-center justify-center p-8">
      <div class="flex flex-col items-center gap-8">
        <!-- Comic Images - Square Pattern with 3 pieces -->
        <div class="relative inline-block">
          <!-- Top Row: Comic 1 and Comic 2 side by side -->
          <div class="flex gap-4 mb-4 justify-center">
            <!-- Comic 1 - Left -->
            <div class="transform bg-white p-5 rounded-2xl">
              <%= image_tag "landing/section-1/comic-1.png", alt: "Comic 1", class: "w-56 h-auto rounded-xl" %>
            </div>

            <!-- Comic 2 - Right -->
            <div class="transform bg-white p-5 rounded-2xl">
              <%= image_tag "landing/section-1/comic-2.png", alt: "Comic 2", class: "w-72 h-auto rounded-xl" %>
            </div>
          </div>

          <!-- Comic 3 - Bottom, Wide -->
          <div class="relative flex justify-center">
            <div class="transform bg-white p-5 rounded-2xl">
              <%= image_tag "landing/section-1/comic-3.png", alt: "Comic 3", class: "w-[480px] h-auto rounded-xl" %>
            </div>

            <!-- Arrow positioned at bottom right of comic 3 -->
            <div class="absolute -bottom-6 -right-12 z-10">
              <%= image_tag "landing/section-1/arrow.png", alt: "Arrow", class: "w-36 h-auto" %>
            </div>
          </div>
        </div>

        <!-- Email Input with thicker border -->
        <div class="relative w-full max-w-2xl">
          <%= inline_svg_tag "icons/mail.svg", class: "absolute left-6 top-1/2 -translate-y-1/2 w-7 h-7 text-[#BE4D54]" %>
          <input type="email" placeholder="Enter your email..." class="w-full pl-16 pr-6 py-4 bg-white placeholder-[#BE4D54] text-xl rounded-2xl border-[6px] border-[#A4383F] shadow-lg">
        </div>

        <!-- Sign Up Button -->
        <div>
          <button class="px-8 py-4 text-xl font-bold rounded-2xl text-white bg-[#A4383F] border-[6px] border-[#7B2E35] shadow-xl hover:bg-[#8B3238] transition-colors">
            Sign up and get free stickers!
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

