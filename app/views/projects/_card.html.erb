<%= link_to project_path(project), class: "card", id: dom_id(project) do %>
  <!-- Card Header -->
  <div class="card-header">
    <% if project.banner.attached? %>
      <%= image_tag project.banner.variant(:card),
          alt: "#{project.title} banner" %>
    <% end %>
  </div>

  <!-- Card Body -->
  <div class="card-body">
    <h3 class="card-title">
      <%= project.title %>
    </h3>

    <% if project.description.present? %>
      <p class="card-description">
        <%= md truncate(project.description, length: 120) %>
      </p>
    <% end %>
  </div>

  <!-- Card Footer -->
  <div class="card-footer">
    <% if project.respond_to?(:devlogs_count) && project.devlogs_count.to_i > 0 %>
      <span class="chip">
        <span class="icon">üìù</span>
        <%= pluralize(project.devlogs_count, 'devlog') %>
      </span>
    <% end %>

    <% if project.respond_to?(:total_time) && project.total_time.present? %>
      <span class="chip">
        <span class="icon">‚è±Ô∏è</span>
        <%= project.total_time %>
      </span>
    <% end %>
  </div>
<% end %>
